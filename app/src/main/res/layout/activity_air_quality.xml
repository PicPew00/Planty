                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imageViewCafeteriaNH3Bar"
                    android:layout_alignBottom="@id/textViewCafeteriaNH3"
                    android:layout_marginStart="18dp"
                    android:text="40 PPM"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>



