                    android:layout_alignBottom="@id/textViewCafeteriaSO2"
                    android:layout_marginStart="18dp"
                    android:text="20 PPM"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <!-- NO2 Level -->
                <TextView
                    android:id="@+id/textViewCafeteriaNO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCafeteriaSO2Value"
                    android:text="Level of NO2:"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageViewCafeteriaNO2Bar"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_toEndOf="@id/textViewCafeteriaNO2"
                    android:layout_below="@+id/textViewCafeteriaSO2Value"
                    android:layout_toRightOf="@id/textViewCafeteriaNO2"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/level_bar_1" />

                <TextView
                    android:id="@+id/textViewCafeteriaNO2Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imageViewCafeteriaNO2Bar"
                    android:layout_alignBottom="@id/textViewCafeteriaNO2"
                    android:layout_marginStart="18dp"
                    android:text="30 PPM"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <!-- NH3 Level -->
                <TextView
                    android:id="@+id/textViewCafeteriaNH3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCafeteriaNO2Value"
                    android:text="Level of NH3:"
