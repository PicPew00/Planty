<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E3E2E2">


    <RelativeLayout
        android:id="@id/top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#DFDFDF"
            android:paddingStart="20dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="77dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/notification_taco_bell" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#DFDFDF"
            android:paddingStart="20dp"
            android:orientation="vertical"

            android:padding="12dp">
            <!-- Element Block-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/notification_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_marginLeft="15dp"
                    android:text="Temperature Alert"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#7C8293" />

                <TextView
                    android:id="@+id/notification_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_below="@+id/notification_type"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Low Temperature"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_below="@+id/notification_type"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:text="19:15"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"

                    android:text="Today"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <!-- Element Block-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/notification_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar2"
                    android:layout_marginLeft="15dp"
                    android:text="Water Analysis Alert"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#7C8293" />

                <TextView
                    android:id="@+id/notification_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar2"
                    android:layout_below="@+id/notification_type2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Low pH"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_below="@+id/notification_type2"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:text="16:12"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"

                    android:text="Yesterday"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <!-- Element Block-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/notification_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar3"
                    android:layout_marginLeft="15dp"
                    android:text="Humidity Alert"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#7C8293" />

                <TextView
                    android:id="@+id/notification_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/avatar3"
                    android:layout_below="@+id/notification_type3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp"
                    android:text="High Humidity"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_below="@+id/notification_type3"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:text="10:55"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/notification_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"

                    android:text="09/11/2023"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <!-- Other TextViews can follow -->

            <!-- Green Circle with TextView with LinearLayout -->



        </LinearLayout>



    </RelativeLayout>

    <!-- Task bar -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_toolbar"
        android:backgroundTint="#B4C9F1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1.95">


